        <form action="/teacher/uploadfile" method="post" enctype="multipart/form-data">
            <main class="main-result">
                <section class="select-menu">
                    <select class="select-sm" name="course" id="course-select">
                        <option value="">Course </option>
                        <option value="BTECH">BTECH</option>
                        <!-- <option value="MTECH">MTECH</option>
                    <option value="BCA">BCA</option> -->
                    </select>
                    <select class="select-sm" name="department" id="course-select">
                        <option value="">Department</option>
                        <option value="CSE">CSE</option>
                        <!-- <option value="MTECH">MTECH</option>
                    <option value="BCA">BCA</option> -->
                    </select>
                    <select class="select-sm" name="semester" id="course-select">
                        <option value="">Semester</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
