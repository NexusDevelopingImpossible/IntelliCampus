                    <option value="MTECH">MTECH</option>
                    <option value="BCA">BCA</option>
                </select> -->
                    <input type="text" class="select-sm select-large" name="subjectcode" placeholder="Subject Code">

                </section>

                <section class="upload-file">

                    <div class="input-file">
                        <!-- <input type="file" name="fileexcel" id=""> -->
                        <label class="custom-file-upload">
                            <input id="select-file" type="file" name="fileexcel" />
                            <span id="file-name">Select your file here</span>
                        </label>
                        <button class="submit-btn btn btn-full btn-medium">Submit</button>
                    </div>
                    
                </section>
            </main>
        </form>
        <div class="calulate-file">
            <p>Download Template:</p>
            <a href="..\data\template_result_analysis.xlsx"><button class="submit-btn btn btn-outline btn-medium" type="submit">View</button></a>
        </div>
    </div>
</div>

<script>
    let selectFile = document.getElementById("select-file");
    let fileName = document.getElementById("file-name");

    selectFile.addEventListener("change", function (e) {
        console.log(selectFile.files[0].name);
        fileName.innerHTML = selectFile.files[0].name;

    })


