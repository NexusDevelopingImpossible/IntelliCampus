<title>
    <%= title%>
</title>
<link rel="stylesheet" href="/css/templatenavbar.css">
<link rel="stylesheet" href="/css/allotstudent.css">
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400&display=swap"
    rel="stylesheet" />

<div class="main-page">

    <div class="allot-student">
        <div class="sub-heading">
            <div id="plus-button">
                <a href="#"><img src="/images/allotarrow.png"></a>
            </div>
            <div id="allot-head">
                <h3>Allot subjects to Students</h3>
            </div>
        </div>
        <div class="main-content">
            <%console.log(timetable)%>

                <ul>
                    <%for(let i=0; i<timetable.length; i++){%>
                        <li>
                                <form action="/teacher/searchstudent" method="post">
                                    <input type="text" name="id" value=<%=timetable[i]._id%> style="display: none">
                                    <div class="anchor-content">
                                        <div class="row1">
                                            <span class="sub-code" name="subjectcode" value="hi">
                                                <%= timetable[i].subjectcode.code%>&nbsp;
                                            </span>
                                            <span class="sub-name">
                                                <%= timetable[i].subjectcode.name%>
                                            </span>
                                        </div>
                                        <div class="row2">
                                            <span>Year : <span class="bold-part">2021 &nbsp;</span></span>
                                            <span class="department">department : <span class="bold-part">
                                                    <%= timetable[i].department%> &nbsp;
                                                </span></span>
                                            <span class="section">section : <span class="bold-part">
                                                    <%= timetable[i].section%> &nbsp;
                                                </span></span>
                                        </div>
                                    </div>
                                    <button>
                                        <img src="/images/plusallot.png">
                                        <span>
                                            Add Students
                                        </span>
                                    </button>
                                </form>
                        </li>
                        <%}%>
                </ul>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    </body>

    </html>