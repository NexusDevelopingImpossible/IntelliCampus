<link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400&display=swap"
    rel="stylesheet" />

<div class="main-page">

    <div class="allot-student">
        <div class="sub-heading">
            <div id="plus-button">
                <a href="#"><img src="/images/allotarrow.png"></a>
            </div>
            <div id="allot-head">
                <h3>Allot subjects to Students</h3>
            </div>
        </div>
        <div class="main-content">
            <form action="/teacher/addsubject" method="post">
                <button type="submit">Save</button>
                <div class="description">
                    <div class="description__titles">
                        <ul>
                            <li>Sr. No</li>
                            <li>Name</li>
                            <li>Registration No.</li>
                            <li>Add</li>
                        </ul>
                    </div>
                    <div class="description-scroll">

                    <% for(let i = 0; i<student.length; i++){%>
                        <div class="description__list">
                            <% console.log(student[i])%>
                            <ul>
                                <li><%= i+1 %></li>
                                
                                <li><%= student[i].name %></li>
                                <li><%= student[i].username %></li>
                                <li><input type="checkbox"></li>
                        </div>
                    <%}%>
                    </div>
                </div>
            </form>

                
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    </body>

