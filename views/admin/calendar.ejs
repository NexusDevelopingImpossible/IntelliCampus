    <ul>
      <li> Sno </li>
      <li> Date </li>
      <li> Day </li>
      <li> Holiday</li>
    </ul>
  </div>
  <form action="/admin/addholiday" method="post"> 
      <div class="notupdated">
        <ul>
          <li>
            1
          </li>
          <li>
            <input class="inputbox" name="date" type="date" placeholder="dd-mm-yy">
          </li>
          <li>
            Saturday
          </li>
          <li>
            <input type="text" class="inputbox" name="holidaytitle" id="" placeholder="blah blah blah day">
            <button class="btn-save">Save</button>
            <button class="del-btn">
              <img src="/images/cross2.png" alt="">
            </button>
          </li>
        </ul>
      </div>  
      </form>
        <%for(let i =0; i<calendardata.length; i++){%>
      <div class="updated">
        <ul>
          <li>
            <%=i+1%>
          </li>
          <li>
            <%=calendardata[i].date%>
          </li>
          <li>
            Saturday
          </li>
          <li>
            <p><%=calendardata[i].holidaytitle%></p>
            <button class="updated-btn"><img src="/images/dustbin.png" alt="*" /></button>
          </li>
        </ul>
      </div>
      <%}%>
    <div class="add-button">
      <button class="add-btn"><img src="/images/plus.png" alt="" /></button>
    </div>
  </div>
  </div>
</div>

