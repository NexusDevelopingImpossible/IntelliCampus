              <button class="continue-btn">Continue </button>
              </form>
        </div>
      </div>
      <div class="back-login ">
        <svg xmlns="http://www.w3.org/2000/svg" height="48" viewBox="0 -960 960 960" width="48"><path class="arrow-ico" d="M400-240 160-480l241-241 43 42-169 169h526v60H275l168 168-43 42Z" /></svg>
       <a href="/Login">Back to Log in</a> 
    </div>
        <div class="page-no">
          <div class=" circle-select circle ">1</div>
          <div class="circle">2</div>
          <div class="circle">3</div>
        </div>
        
    </div>
    <!-- <form class="login-form" method="POST" action="/create-session"> -->


      </div>
      <div class="mobile-view">
        <div class="form-button">
          <span class="btn-forgotpass">
            <a id="btnForgotPass" type="button"> Forgot Password ? </a>
          </span>
        </div>
      </div>
      <div class="form-info">
        <p>
          <!-- Note: For student, use registration number as Username and 123 as
          password if it is not change! -->
        </p>
      </div>
    </form>
  </div>
</section>
